// Built-in Compilers Package
[
	// LESS Compiler
	{
		"name": "less",

		"display": "LESS",

		"version": "1.0.0",

		"koalaVersion": ">=2.0.0",

		"main": "LessCompiler.js",

		// Test
		"maintainer": {
			"name": "Ethan Lai",
			"email": "lain.z.q@gmail.com",
			"web": "http://oklai.name",
			"project": "http://github.com/oklai/koala"
		},

		"contributors": [
			{"name": "Ziad Khoury","web": "https://github.com/zaygraveyard"}
		],

		"isExtension": true,
		// End test

		"fileTypes": [{
			"extension": "less", 
			"output": "css",
			"icon": "../../assets/img/filetypes/less.png",
			"category": "style"
		}],

		// File Options
		"options": [
			{
				"type": "checkbox",
				"name": "lineComments",
				"display": "Line Comments",
				"default": false
			},
			{
				"type": "checkbox",
				"name": "debugInfo",
				"display": "Debug Info",
				"default": false
			},
			{
				"type": "checkbox",
				"name": "strictMath",
				"display": "Strict Math",
				"default": true
			},
			{
				"type": "checkbox",
				"name": "strictUnits",
				"display": "Strict Units",
				"default": false
			},
			{
				"type": "droplist",
				"name": "outputStyle",
				"display": "Output Style",
				"items": [
					{
						"value": "",
						"text": "normal"
					},
					{
						"value": "compress",
						"text": "compress"
					},
					{
						"value": "yuicompress",
						"text": "yuicompress"
					}
				],
				"default": ""
			}
		],

		// Advanced Options
		"advanced": [
			{
				"type": "checkbox",
				"name": "useCommand",
				"display": "Use the System LESS compiler",
				"default": false
			},
			{
				"type": "text",
				"name": "commandPath",
				"display": "Use the LESS executable at this path",
				"default": "",
				"placeholder": "Default: lessc",
				"depend": "useCommand"
			}
		],

		// project settings file path
		"projectSettings": "../settings/koala-config-of-less.json",

		"libraries": ["LESS@1.4.0"]
	},

	// Sass Compiler
	{
		"name": "sass",

		"display": "Sass",

		"version": "1.0.0",

		"koalaVersion": ">=2.0.0",

		"main": "SassCompiler.js",

		"fileTypes": [
			{
				"extension": "sass", 
				"output": "css",
				"icon": "../../assets/img/filetypes/sass.png",
				"category": "style"
			},
			{
				"extension": "scss", 
				"output": "css",
				"icon": "../../assets/img/filetypes/scss.png",
				"category": "style"
			}
		],

		"options": [
			{
				"type": "checkbox",
				"name": "compass",
				"display": "Compass Mode",
				"default": false
			},
			{
				"type": "checkbox",
				"name": "lineComments",
				"display": "Line Comments",
				"default": false
			},
			{
				"type": "checkbox",
				"name": "debugInfo",
				"display": "Debug Info",
				"default": false
			},
			{
				"type": "checkbox",
				"name": "unixNewlines",
				"display": "Unix New Lines",
				"default": false
			},
			{
				"type": "droplist",
				"name": "outputStyle",
				"display": "Output Style",
				"items": [
					{
						"value": "nested",
						"text": "nested"
					},
					{
						"value": "expanded",
						"text": "expanded"
					},
					{
						"value": "compact",
						"text": "compact"
					},
					{
						"value": "compressed",
						"text": "compressed"
					}
				],
				"default": "nested"
			}
		],

		// Advanced Options
		"advanced": [
			{
				"type": "checkbox",
				"name": "useSassCommand",
				"display": "Use the System Sass compiler",
				"default": false
			},
			{
				"type": "text",
				"name": "sassCommandPath",
				"display": "Use the Sass executable at this path",
				"default": "",
				"placeholder": "Default: sass",
				"depend": "useSassCommand"
			}
		],

		"projectSettings": "../settings/koala-config-of-sass.json",

		"libraries": ["Sass@3.2.9"]
	},

