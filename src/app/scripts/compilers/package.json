// Built-in Compilers Package
[
	// LESS Compiler
	{
		"name": "less",

		"display": "LESS",

		"version": "1.0.1",

		"koalaVersion": ">=2.0.0",

		"main": "LessCompiler.js",

		"contributors": [
			{"name": "Ziad Khoury","web": "https://github.com/zaygraveyard"}
		],

		"fileTypes": [{
			"extension": "less",
			"output": "css",
			"icon": "../../assets/img/filetypes/less.png",
			"category": "style"
		}],

		// File Options
		"options": [
			{
				"type": "checkbox",
				"name": "sourceMap",
				"display": "Source Map",
				"default": false
			},
			{
				"type": "checkbox",
				"name": "lineComments",
				"display": "Line Comments",
				"default": false
			},
			{
				"type": "checkbox",
				"name": "debugInfo",
				"display": "Debug Info",
				"default": false
			},
			{
				"type": "checkbox",
				"name": "strictMath",
				"display": "Strict Math",
				"default": false
			},
			{
				"type": "checkbox",
				"name": "strictUnits",
				"display": "Strict Units",
				"default": false
			},
			{
				"type": "checkbox",
				"name": "autoprefix",
				"display": "Autoprefix",
				"default": false
			},
			{
				"type": "text",
				"name": "autoprefixConfig",
				"display": "Autoprefix Config",
				"default": "",
				"placeholder": "> 1%', 'last 2 versions', 'Firefox ESR', 'Opera 12.1",
				"depend": "autoprefix"
			},
			{
				"type": "droplist",
				"name": "outputStyle",
				"display": "Output Style",
				"items": [
					{
						"value": "",
						"text": "normal"
					},
					{
						"value": "compress",
						"text": "compress"
					}
				],
				"default": ""
			}
		],

		// Advanced Options
		"advanced": [
			{
				"type": "checkbox",
				"name": "useCommand",
				"display": "Use the System LESS compiler",
				"default": false
			},
			{
				"type": "text",
				"name": "commandPath",
				"display": "Use the LESS executable at this path",
				"default": "",
				"placeholder": "Default: lessc",
				"depend": "useCommand"
			}
		],

		// project settings file path
		"projectSettings": "../../settings/koala-config-of-less.json",

		"libraries": ["LESS@1.7.0"]
	},

	// Sass Compiler
	{
		"name": "sass",

		"display": "Sass",

		"version": "1.0.1",

		"koalaVersion": ">=2.0.0",

		"main": "SassCompiler.js",

		"fileTypes": [
			{
				"extension": "sass",
				"output": "css",
				"icon": "../../assets/img/filetypes/sass.png",
				"category": "style"
			},
			{
				"extension": "scss",
				"output": "css",
				"icon": "../../assets/img/filetypes/scss.png",
				"category": "style"
			}
		],

		"options": [
			{
				"type": "checkbox",
				"name": "compass",
				"display": "Compass Mode",
				"default": false
			},
			{
				"type": "checkbox",
				"name": "sourceMap",
				"display": "Source Map",
				"default": true
			},
			{
				"type": "checkbox",
				"name": "lineComments",
				"display": "Line Comments",
				"default": false
			},
			{
				"type": "checkbox",
				"name": "debugInfo",
				"display": "Debug Info",
				"default": false
			},
			{
				"type": "checkbox",
				"name": "unixNewlines",
				"display": "Unix New Lines",
				"default": false
			},
			{
				"type": "checkbox",
				"name": "autoprefix",
				"display": "Autoprefix",
				"default": false
			},
			{
				"type": "text",
				"name": "autoprefixConfig",
				"display": "Autoprefix Config",
				"default": "",
				"placeholder": "> 1%', 'last 2 versions', 'Firefox ESR', 'Opera 12.1",
				"depend": "autoprefix"
			},
			{
				"type": "droplist",
				"name": "outputStyle",
				"display": "Output Style",
				"items": [
					{
						"value": "nested",
						"text": "nested"
					},
					{
						"value": "expanded",
						"text": "expanded"
					},
					{
						"value": "compact",
						"text": "compact"
					},
					{
						"value": "compressed",
						"text": "compressed"
					}
				],
				"default": "nested"
			}
		],

		// Advanced Options
		"advanced": [
			{
				"type": "checkbox",
				"name": "useSassCommand",
				"display": "Use the System Sass compiler",
				"default": false
			},
			{
				"type": "text",
				"name": "sassCommandPath",
				"display": "Use the Sass executable at this path",
				"default": "",
				"placeholder": "Default: sass",
				"depend": "useSassCommand"
			}
		],

		"projectSettings": "../../settings/koala-config-of-sass.json",

		"libraries": ["Sass@3.4.9"]
	},

